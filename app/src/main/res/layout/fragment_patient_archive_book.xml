<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/archiveRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.patientFrags.PatientArchiveBookFragment">

    <TextView
        android:id="@+id/archive_swipe_to_refresh_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:fontFamily="@font/poppins_regular"
        android:text="@string/swipe_down_to_refresh"
        android:textSize="@dimen/text_15sp"
        android:visibility="visible"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/archived_frag_swipeToRefresh"
        android:layout_width="@dimen/margin_0"
        android:layout_height="@dimen/margin_0"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/archive_swipe_to_refresh_tv">

        <com.todkars.shimmer.ShimmerRecyclerView
            android:id="@+id/archivedBookRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shimmer_recycler_item_count="2"
            app:shimmer_recycler_layout="@layout/placeholder_row_layout" />

        <ProgressBar
            android:id="@+id/archive_frag_progress_bar"
            android:layout_width="@dimen/margin_80"
            android:layout_height="@dimen/margin_80"
            android:background="@drawable/circle_shape"
            android:indeterminateTint="@color/colorPrimary"
            android:padding="@dimen/margin_10"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/archivedBookRecyclerView"
            app:layout_constraintEnd_toEndOf="@+id/archivedBookRecyclerView"
            app:layout_constraintStart_toStartOf="@+id/archivedBookRecyclerView"
            app:layout_constraintTop_toTopOf="@+id/archivedBookRecyclerView" />


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</androidx.constraintlayout.widget.ConstraintLayout>