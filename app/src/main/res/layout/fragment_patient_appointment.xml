<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGray"
    tools:context=".ui.fragments.patientFrags.PatientAppointmentFragment">


    <TextView
        android:id="@+id/no_messages_from_doctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/text_15sp"
        android:gravity="center"
        android:text="@string/no_appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/appointment_icon"
        android:layout_width="@dimen/margin_50"
        android:layout_height="@dimen/margin_50"
        android:backgroundTint="@color/lightGray"
        android:src="@drawable/ic_appointment"
        android:layout_marginTop="@dimen/margin_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_messages_from_doctor" />

</androidx.constraintlayout.widget.ConstraintLayout>